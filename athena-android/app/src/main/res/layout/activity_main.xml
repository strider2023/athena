<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.touchmenotapps.athena.main.MainActivity"
    android:background="@color/bg_color">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/user_input_container">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/chatList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true" />

        <android.support.v7.widget.CardView
            android:id="@+id/options_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/holo_blue_dark"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/options_button_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/search_by_audio"
                    style="@style/Button"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Voice Input" />

                <Button
                    android:id="@+id/search_by_image"
                    style="@style/Button"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="Scan Image" />

                <Button
                    android:id="@+id/search_by_text_scan"
                    style="@style/Button"
                    android:text="Scan Question" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/user_input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:hint="Ask Athena"
                android:maxLines="4"
                android:textSize="16sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/sendInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_button"
                android:src="@drawable/ic_launcher_background"
                android:tint="@android:color/white"
                app:fabSize="mini" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/launchOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_button"
        android:src="@drawable/ic_apps_black_24dp"
        android:tint="@android:color/white"
        app:fabSize="normal" />

</RelativeLayout>
